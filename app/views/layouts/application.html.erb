<!DOCTYPE html>
<html>
  <head>
    <title>Hackernews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id ="main" class = "container" > 
     <header class="navbar navbar-default roll=navigation">

        <div id="logo"  class="navbar-brand">
          <% link_to "hackernews", root_path %>

        </div>

        <nav class="collapse navbar-collapse navbar-ex-1-collapse">

          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to "submit", new_submission_path %></li>
              <li><%= link_to "account", edit_user_registration_path %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "logout", destroy_user_session_path, :method => :delete %></li>
            </ul>
          <% else %>
            <ul>
              <li><%= link_to "login", new_user_session_path %></li>
            </ul>
          <% end %>

        </nav>

     </header>
    </div>

	  <% flash.each do |name, msg| %>
		  <% content_tag(:div, msg, class: "alert alert-#{name}") %>
    <% end %>

      <div id="container" class="center-block"> 
        <%= yield %>
      </div>

    
  </body>
</html>
